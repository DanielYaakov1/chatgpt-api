{
     "compilerOptions": {
          "baseUrl": "./src",
          "target": "es2020",
          "module": "commonjs",
          "allowJs": true,
          "checkJs": true,
          "outDir": "./dist",
          "sourceMap": true,
          "noImplicitAny": true,
          "experimentalDecorators": true,
          "allowSyntheticDefaultImports": true,
          "typeRoots": ["./src/types", "./node_modules/@types"]
     },
     "include": ["src/**/*.ts", "index.ts"],
     "exclude": ["node_modules", "src/types"]
}
